# Production Environment Variables for Vercel
# These will be set in the Vercel dashboard

# Node.js version for consistent builds
NODE_VERSION=20

# Build optimization
NODE_ENV=production
CI=true

# Disable telemetry for faster builds
NEXT_TELEMETRY_DISABLED=1

# Game-specific configurations
VITE_APP_TITLE=Gorstan Game
VITE_APP_VERSION=3.8.8
VITE_APP_ENVIRONMENT=production

# Performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_PERFORMANCE_THRESHOLD_FPS=30
VITE_PERFORMANCE_THRESHOLD_MEMORY=100

# Game features
VITE_ENABLE_DEBUG_PANEL=false
VITE_ENABLE_CONSOLE_LOGS=false
VITE_ENABLE_PERFORMANCE_DASHBOARD=true

# Cache settings
VITE_CACHE_ENABLED=true
VITE_CACHE_TTL=3600000
